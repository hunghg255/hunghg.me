{
  "name": "hunghg.me",
  "version": "0.1.0",
  "description": "A minimal portfolio, component registry, and blog.",
  "homepage": "https://hunghg.me",
  "license": "MIT",
  "author": "hunghg255",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hunghg255/hunghg.me.git"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "preview": "next build --turbopack && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "check-types": "tsc --noEmit --pretty",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "registry:internal:build": "tsx --tsconfig ./tsconfig.scripts.json ./src/scripts/build-registry.mts",
    "registry:build": "pnpm registry:internal:build && shadcn build ./src/__registry__/registry.autogenerated.json",
    "capture": "tsx --tsconfig ./tsconfig.scripts.json ./src/scripts/capture.mts",
    "generate-libphonenumber-metadata": "libphonenumber-metadata-generator ./src/assets/libphonenumber.metadata.json --countries VN --extended",
    "upgrade:next": "npx @next/codemod@latest upgrade latest",
    "upgrade:tailwind": "npx @tailwindcss/upgrade@latest",
    "prepare": "husky"
  },
  "dependencies": {
    "@bprogress/next": "^3.2.12",
    "@hookform/resolvers": "^4.1.3",
    "@ncdai/react-wheel-picker": "^1.0.19",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "fumadocs-core": "^15.8.5",
    "jotai": "^2.16.1",
    "libphonenumber-js": "^1.12.33",
    "lucide-react": "^0.516.0",
    "motion": "^12.23.26",
    "next": "15.4.10",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.1.0",
    "react-confetti": "^6.4.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.69.0",
    "react-markdown": "^10.1.0",
    "react-use": "^17.6.0",
    "schema-dts": "^1.1.5",
    "shadcn": "2.6.4",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "swr": "^2.3.8",
    "tailwind-merge": "^3.4.0",
    "vcard-creator": "^0.7.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.19.27",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.4.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "libphonenumber-metadata-generator": "^1.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "puppeteer-core": "^24.34.0",
    "rehype-external-links": "^3.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.1.2",
